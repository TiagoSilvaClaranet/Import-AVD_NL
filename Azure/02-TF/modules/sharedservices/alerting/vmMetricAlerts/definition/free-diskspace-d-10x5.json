{
    "if": {
        "allOf": [
            {
                "field": "type",
                "equals": "Microsoft.Compute/virtualMachines"
            },
            {
                "field": "Microsoft.Compute/virtualMachines/osProfile.windowsConfiguration",
                "exists": "true"
            },
            {
                "field": "tags['SLA']",
                "equals": "10x5"
            }
        ]
    },
    "then": {
        "effect": "deployIfNotExists",
        "details": {
            "type": "Microsoft.Insights/metricAlerts",
            "name": "cpu-usage-alert",
            "deployment": {
                "properties": {
                    "description": "Deploying memory usage metric alert",
                    "mode": "Incremental",
                    "template": {
                        "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                        "contentVersion": "1.0.0.0",
                        "parameters": {
                            "vmName": {
                                "type": "string"
                            },
                            "location": {
                                "type": "string"
                            },
                            "actionGroup": {
                                "type": "array"
                            }
                        },
                        "resources": [
                            {
                                "type": "Microsoft.Insights/metricAlerts",
                                "name": "[concat(parameters('vmName'), '-Free-DiskSpace-D-10x5')]",
                                "location": "global",
                                "apiVersion": "2018-03-01",
                                "properties": {
                                    "description": "Free disk space on D volume alert for virtual machine",
                                    "severity": 0,
                                    "enabled": true,
                                    "scopes": [
                                        "[resourceId('Microsoft.Compute/virtualMachines', parameters('vmName'))]"
                                    ],
                                    "evaluationFrequency": "PT1M",
                                    "windowSize": "PT1M",
                                    "criteria": {
                                        "odata.type": "Microsoft.Azure.Monitor.MultipleResourceMultipleMetricCriteria",
                                        "allOf": [
                                            {
                                                "threshold": 5,
                                                "name": "Metric1",
                                                "metricNamespace": "Azure.VM.Windows.GuestMetrics",
                                                "metricName": "\\LogicalDisk(D:)\\% Free Space",
                                                "operator": "lessthanorequal",
                                                "timeAggregation": "average",
                                                "criterionType": "StaticThresholdCriterion"
                                            }
                                        ]
                                    },
                                    "autoMitigate": true,
                                    "targetResourceType": "Microsoft.Compute/virtualMachines",
                                    "targetResourceRegion": "westeurope",
                                    "actions": "[parameters('actionGroup')]"
                                }
                            }
                        ]
                    },
                    "parameters": {
                        "vmName": {
                            "value": "[field('name')]"
                        },
                        "location": {
                            "value": "[field('location')]"
                        },
                        "actionGroup": {
                            "value": "[parameters('actionGroup')]"
                        }
                    }
                }
            }
        }
    }
}